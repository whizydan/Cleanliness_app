<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ContactHotlineActivity">

    <TextView
        android:layout_margin="10dp"
        android:text="Contact Hotline"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="Contact Us via Phone or call by clicking any of the choices below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:text="Give us a call"
        android:id="@+id/call"
        android:drawableEnd="@android:drawable/ic_menu_call"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:text="Email us"
        android:id="@+id/email"
        android:drawableEnd="@android:drawable/sym_action_email"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:text="To chat with us, head over messages in the homepage"
        android:layout_height="wrap_content"/>

</LinearLayout>